<h1>ユーザー詳細</h1>

<h2><%= @user.name %></h2>

<% if @user.id == current_user.id %>
  <p><%= @user.email %><p>
<% else %>
  <%= render "relationships/follow_button", user: @user %>
  <% if @isRoom == true %>
    <p><a href="/rooms/<%= @roomId %>">チャットへ</a>
  <% else %>
    <%= form_for @room do |f| %>
      <%= fields_for @entry do |e| %>
        <%= e.hidden_field :user_id, :value=> @user.id %>
      <% end %>
      <%= f.submit "チャットを始める" %>
    <% end %>
  <% end %>
<% end %>

<%= link_to "ユーザー一覧に戻る", users_path %>
